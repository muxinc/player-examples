{
  "version": 2,
  "name": "players",
  "alias": ["mux-players.now.sh"],
  "builds": [
    { "src": "videojs/package.json", "use": "@now/static-build" },
    { "src": "hlsjs/package.json", "use": "@now/static-build" },
    { "src": "/now-airtable/api/*.js", "use": "@now/node" },
    { "src": "/now-airtable/next.config.js", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/now-airtable/api/videos",
      "dest": "/now-airtable/api/list-videos.js",
      "methods": ["GET"]
    },
    {
      "src": "/now-airtable/api/videos",
      "dest": "/now-airtable/api/add-video.js",
      "methods": ["POST"]
    },
    {
      "src": "/now-airtable/api/videos/?(?<id>[^/]*)",
      "dest": "/now-airtable/api/get-video.js?id=$id",
      "methods": ["GET"]
    },
    {
      "src": "/now-airtable/_mux",
      "dest": "/now-airtable/api/mux-callback.js",
      "methods": ["POST"]
    }
  ]
}
